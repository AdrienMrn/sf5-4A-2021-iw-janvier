{% extends 'base_back.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <h1>Tag {{ tag.name }}</h1>

    <div class="row">
        {% for realEstateAd in tag.realEstateAds %}
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{ realEstateAd.title }} </span>
                        <p>{{ realEstateAd.description|slice(1, 50) }} </p>
                    </div>
                    <div class="card-action">
                        <a href="{{ path('back_real_estate_ad_show', {'slug': realEstateAd.slug}) }}">Voir ce bien</a>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>

    <br>

    <a href="{{ path('back_tag_index') }}">back to list</a>

    <a href="{{ path('back_tag_edit', {'id': tag.id}) }}">edit</a>

    {{ include('back/tag/_delete_form.html.twig') }}
{% endblock %}
